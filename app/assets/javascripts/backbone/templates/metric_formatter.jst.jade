- intFormatter = new Backgrid.NumberFormatter({decimals: 0})
- numFormatter = new Backgrid.NumberFormatter()
- numForm4D = new Backgrid.NumberFormatter({decimals: 4})
if m_obj.unit == 'dollar'
  - score = intFormatter.fromRaw(metric_details.value)
else if m_obj.unit == 'query'
  if m_obj.decimals == 4
    - score = numForm4D.fromRaw(metric_details.value)
  else
    - score = intFormatter.fromRaw(metric_details.value)
else
  - score = numFormatter.fromRaw(metric_details.value)
if !slink || (m_obj && m_obj.disabled == true)
  if metric_details.worst
    span(style='color:red;font-weight: 400;')
      = score
  else
    span= score
else
  if metric_details.worst
    a(href=slink, style='color:red;font-weight: 400;')
      = score
  else
    a(href=slink)
      = score
