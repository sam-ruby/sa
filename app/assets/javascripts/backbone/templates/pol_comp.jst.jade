.form-submission-results.alert
  a.close(href="#")
    &times;
  .success-div
    h4 Job Requested Successfully!
      span.succes &nbsp;ID is &nbsp;
      span.job-id
  .error-div
    h4 Please try again! &nbsp;
      span.error

.form-engine-comp
  form.form-horizontal.engine-comp(role="form", method="get")
    .control-group
      label.control-label Polaris 1
      .controls
        select.engine-names
          option(value='select_engine') Select an Engine
        span.label URL
        input.engine(type="text", placeholder="URL for Polaris Engine 1")
        span.label Switch
        input.switch(type="text", placeholder="switches=switch_name:off")
    
    .control-group
      label.control-label(for="engine_2) Polaris 2 
      .controls
        select.engine-names
          option(value='select_engine') Select an Engine
        span.label URL
        input.engine(type="text", placeholder="URL for Polaris Engine 2")
        span.label Switch
        input.switch(type="text", placeholder="switches=switch_name:on")
    
    .control-group
      label.control-label(for="query_set) Query Sets
        br
        span.label-select-help (Upto 3 Sets)
      .controls
        select.query-sample(multiple="multiple")
          option(value='select_query_sample') Select a Query Sample
        .help-text-block
          .link-control
            a(href="#")
          .help-text-contents    
            .query-set
              span.title Top Queries
              span.body Top 2000 queries ranked by daily query traffic
            .query-set
              span.title Trending in last 2, 7, 14, 21, 28 days
              span.body Queries having relatievly higher traffic within 2 days, 7 days, etc. 
            .query-set
              span.title Conversion dropping in last 1, 2, 3 weeks
              span.body Queries having relatievly lower Conversion within 1 week, 2 weeks or 3 weeks
            .query-set
              span.title Poorly Performing in last 30 days
              span.body Queries having higher traffic with low Product View Rate
            .query-set
              span.title Comptetive Opportunities
              span.body Queries having significant Assortment Gap in Items compared to Amazon
            .query-set
              span.title Typical Queries
              span.body Set of randomly sampled queries formulate this segment.


    .control-group
      .controls
        button.btn.btn-default.submit(type="submit") Submit
        button.btn.btn-default.reset(type="reset") Reset
