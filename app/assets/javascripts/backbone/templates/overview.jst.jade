- intFormatter = new Backgrid.NumberFormatter({decimals: 0})
- numFormatter = new Backgrid.NumberFormatter()
table.table.table-condensed
  tbody
    tr.metrics-col-head
      td(width='20%') Metric
      td(width='10%') Score
      td(width='15%', style='text-align:right') Change
      td(width='55%') Top Winning Queries
    each metric in metrics
      if !metric
        - continue
      - metric_name_o = view.metrics_name[metric.name]
      if !metric_name_o
        - continue
      tr(class=metric_name_o.id)
        td.metric-name
          a(href='#', style='text-transform:capitalize;')
            if metric_name_o
              = metric_name_o.name
            else
              | Name not known
        td
          if ['traffic', 'revenue'].indexOf(metric.name)>-1
            = intFormatter.fromRaw(metric.score)
          else
            = numFormatter.fromRaw(metric.score)
        td(class=metric.change>0?'green-change':'red-change')
          span.pull-right
            | &nbsp;
            if metric.change>0 
              i.icon-arrow-up.green-change
            else
              i.icon-arrow-down.red-change
          span.pull-right.metric-change
            = numFormatter.fromRaw(metric.change)
            |%
        td.metric-queries
          if metric.queries
            each query in metric.queries.split(',')
              a(href='#')= query
              |,&nbsp
            a(href='#')
              |more...
          else
            |--
