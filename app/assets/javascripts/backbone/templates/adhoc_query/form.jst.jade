form.form-horizontal.cvr-dropped-query-form
  .control-group
    label.control-label(for='query') Search for Query
    .controls
      input.input-xlarge.query(type='text', value=query)
      i.query_search_clear_icon.icon-remove-sign
      button.btn.search(type='submit') Search
      span.label.label-info.label-search-mode
        a#switch-mode-btn(href='#')
          i.icon.icon-th-large 
          | &nbsp;Â 
          span.switch_mode_text Switch to Simple Search

  .control-group
    label.control-label(for='date-picker').advanced Date Range
    .controls
      select.weeks-apart-select.advanced
        each val in [1, 2, 3 ,4]
          if weeks_apart == val
            option(selected=true, value=val)
              =val + ' Week'
          else
            option(value=val)
              =val + ' Week'
      span.advanced
        | of
      input.input-small.datepicker.advanced(type='text',
        'data-date-format'='M d, yyyy',
        'data-date-autoclose'='true')
      
      button.btn.show-low.advanced(type='submit')
        |Show Low Conversion Queries

    .controls
      .cvr-dropped-selected-result.date_range_display.advanced

