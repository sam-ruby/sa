!!!
%html
  %head
    %title= @title
    %link{:rel=>:icon, :type=>'image/png',
      :href=>'assets/walmart-transparent.png'}
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'http://mdw.dev.walmartlabs.com/mdw.js'
    :scss
      .test {
        width: 100%;
      }
      .side-bar {
        height: 100em;
        vertical-align: top;
      }
      .date-picker-input {
        width: 80% !important;
      }
      .test-title-box {
        line-height: 3em;
      }
      .dashboard-search-quality-container, .dashboard-poorly-performing-container {
        width: 36em;
      }
      .content-header, .widget-header {
        line-height: 2em;
        font-weight: bold;
        padding-left: .2em;
        border: thin solid silver;
      }
      .widget-header {
        color: black;
      }
      .close1 {
        padding-right: 0.5em !important;
      }
      .ajax-loader {
        display: none;
        margin-right: auto;
        margin-left: auto;
        padding-top:2em;
      }
      .side-title {
        font-size: 1.2em;
        color: #2f7ed8;
      }
      .side-title-item {
        padding-left: 0em;
        font-size: small;
      }
      .inner-container {
        margin: 0 2em 0 2em;
      }
      .tab-title {
        font-size: 1.2em;
      }
      .side-nav {
        display:inline-block;
        width:10%;
      }
      .main-content-container {
        display:inline-block;
        vertical-align:top;
        margin-left: 1em;
        width: 88%;
        position: relative;
      }
      .main-content {
        display: inline-block;
        width: 100%;
      }
      #dashboard {
        display: none;
      }
      .dashboard-tab {
        display: none;
      }
      .walmart_logo {
        height: 33px;
        width: 33px;
        margin-top: -13px;
        margin-bottom: -9px;
      }
      .date {
        margin-right: 1em;
      }
      .date-picker-container {
        display:inline-block;
        position:absolute;
        right: 0em;
        top: 0em;
        margin-bottom: 1em;
      }
      .input-append {
        margin-bottom: 0px;
        vertical-align: inherit;
      }
      tr.selected {
        background-color: rgba(47, 126, 216, .07);
      }
      .date-week-holder {
        color: white;
        margin-right: 1em;
        line-height: 3em;
      }
      #dp3 {
        cursor: pointer;
      }
      .funnel-title {
        margin-right: 1em;
      }
      .chart-title {
        text-align: center;
      }
      .cad-success {
        background-color: #dff0d8;
      }
      .cad-error {
        background-color: #f2dede;
      }
    = yield :stylesheets
    = csrf_meta_tag 
  
  %body
    #mdw-toolbar
    = render 'shared/title'
    .container
      .row.master-tab
        %ul.nav.nav-tabs
          %li.tab-title.search-tab.pull-right
            %form.form-search{:style=>'margin:0'}
              .search-container
                %input.input-medium.search-query{:type=>:text,
                  :style=>'width:20em'}
                .adv-search-form
                  %p{:style=>'font-size:.90em;'}
                    Week over Week Comparison
                    %span.close.pull-right{:style=>'font-size: 1em'}
                      %i.icon-remove 
                  %small Search
                  %br
                  %input.input-large.search-field{:type=>'text' }
                  %br
                  %small Date around 1 week of
                  %br
                  %input.input-small.datepicker{:type=>'text',
                    'data-date-format'=>'M d, yyyy',
                    'data-date-autoclose' => 'true'}
                  %br
                  %button.btn.btn-small.adv-search-btn.btn-primary{:type=>:submit,
                    :style=>'margin-top:.2em'}
                    Search
              %button.btn.search-btn{:type=>:submit}
                Search


        .modal.hide.fade
          .modal-header
            .widget-header
              Add a new Widget
              %button.close.pull-right
                &times;
          .modal-body.fsize-small
            %form#widget-dialog
              %label
                Widget Title
              %input{:type=>:text, :placeholder=>'Widget Title',
                :name=>:widget_title}
              %label
                Select a widget
              %select
                %option
                  Search Quality Queries
                %option
                  Poorly Performing Product Intents
              
              %label
                Filter this data
              %a
                Add a filter
          .modal-footer
            %a.btn.cancel-widget
              Cancel
            %a.btn.btn-primary.save-widget
              Add Widget 


      .row
        #data-container
          = yield :test_content
     
        
    = javascript_include_tag :application
    = yield :javascript
